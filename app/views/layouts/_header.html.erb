<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand bg-light ml-5" href="/">Rails EC</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%= form_with url: search_search_path, class: "form-inline my-2 my-lg-0 ml-auto", method: :get, local: true do |form| %>
      <%= form.text_field :keyword, class: "form-control mr-sm-2", style: "width: 60vw", placeholder: "Search" %>
      <%= form.submit "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
    <ul class="navbar-nav">
      <li class="nav-item active">
        <%= link_to 'Home', "/", class: 'nav-link' %>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if user_signed_in? or admin_signed_in? %>
            Menu
          <% else %>
            SignIn Menu
          <% end %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
                <%= link_to 'Cart', carts_path, class: 'dropdown-item' %>
                <%= link_to 'Products', products_path, class: 'dropdown-item' %>
                <%= link_to 'Sign Out', user_session_path, class: 'dropdown-item', method: :delete %>
            <% elsif admin_signed_in? %>
                <%= link_to 'Cart', user_session_path, class: 'dropdown-item' %>
                <%= link_to 'Products', products_path, class: 'dropdown-item' %>
                <%= link_to 'DashBord', "#", class: 'dropdown-item' %>
