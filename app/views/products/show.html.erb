<div class="row mt-3">
  <div class="col-6 d-flex justify-content-center">
    <% if @product.images.attached? %>
      <div id="carouselExampleIndicators" class="carousel slide w-50 h-50" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag @product.images.first, class: "d-block w-100 h-100" %>
          </div>
          <% @product.images.each do |image| %>
            <div class="carousel-item">
              <%= image_tag image, class: "d-block w-100 h-100" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <% end %>
  </div>
  <div class="col-6">
    <div class="card w-100">
      <div class="card-body">
        <h5 class="card-title">Product Name:<%= @product.title %></h5>
        <div class="card-text">
          <p><%= @product.description %></p>
          <p>Price:<%= @product.price %></p>
        </div>
        <%= link_to 'Add Cart', carts_add_path(params: {product_id: @product.id, quantity: 1}), class: 'btn btn-info', method: :post %>
      </div>
    </div>
  </div>
</div>
